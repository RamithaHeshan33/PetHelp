<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    >

    <Button
        android:id="@+id/profile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/guide"
        android:text="Profile"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_below="@id/profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo" />

    <ScrollView
        android:layout_below="@id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/terms_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PetHelp Mobile Application Terms and Conditions"
                android:textStyle="bold"
                android:textSize="24sp"
                android:paddingBottom="16dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Updated: 2024.08.17"
                android:paddingBottom="16dp"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Acceptance of Terms"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By accessing and using the PetHelp mobile application, you acknowledge that you have read, understood, and agree to be bound by these terms and conditions, as well as any applicable laws and regulations. If you do not agree with any part of these terms, you must refrain from using the application."
                android:textSize="14sp"
                android:paddingTop="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. User Accounts"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Registration: To access certain features of the PetHelp application, you may be required to create an account by providing accurate and complete information. You are responsible for maintaining the confidentiality of your account credentials and for all activities that occur under your account."
                android:textSize="14sp"
                android:paddingTop="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Eligibility: You must be at least 18 years old to create an account and use the PetHelp application. By registering, you confirm that you meet this age requirement."
                android:textSize="14sp"
                android:paddingTop="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Privacy Policy"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your privacy is important to us. Please review our Privacy Policy [insert link] to understand how we collect, use, and protect your personal information."
                android:textSize="14sp"
                android:paddingTop="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. Use of the Application"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Permitted Use: You are granted a limited, non-exclusive, non-transferable license to use the PetHelp application for personal, non-commercial purposes."
                android:textSize="14sp"
                android:paddingTop="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Prohibited Use: You agree not to misuse the application by engaging in any illegal, harmful, or unauthorized activities, including but not limited to copying, modifying, or distributing the application without permission; accessing the application using automated methods (bots, spiders, etc.); and interfering with the operation of the application or its security features."
                android:textSize="14sp"
                android:paddingTop="4dp"/>

            <!-- Add additional sections as needed following the same structure -->

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
